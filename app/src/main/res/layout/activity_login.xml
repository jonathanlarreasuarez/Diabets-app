        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
android:layout_marginLeft="16dp"
            android:background="@drawable/botonredondo"
            android:onClick="validarLogin"
            android:ems="10"
            android:text="INGRESAR"
            android:textColor="#ffffff"

            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/layouttxtRegistro"
            android:layout_width="match_parent"
            android:layout_below="@+id/button"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:paddingLeft="50dp"
                android:textSize="15dp"
                android:text="No tienes una cuenta?" />

            <TextView
                android:id="@+id/registroBtn"
                android:onClick="irRegistro"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/textView6"

                android:layout_height="wrap_content"
                android:textColor="#0099d5"
                android:text=" Registrate!" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layouttxtInvitado"
            android:layout_width="match_parent"
            android:layout_below="@+id/layouttxtRegistro"
            android:layout_height="wrap_content"
