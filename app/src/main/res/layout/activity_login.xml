                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/imageViewPass"
                design:srcCompat="@mipmap/ic_glucosa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_below="@+id/imageViewUser"
                android:layout_centerInParent="true"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/nombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="9dp"
                android:layout_marginTop="10dp"

                android:layout_toRightOf="@+id/imageViewUser"
                android:hint="Usuario"

                android:inputType="text"
                android:text="champ"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary" />

            <EditText
                android:id="@+id/claveUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombreUsuario"
                android:layout_marginRight="9dp"
                android:layout_marginTop="15dp"

                android:layout_toRightOf="@+id/imageViewPass"
                android:hint="Contraseña"

